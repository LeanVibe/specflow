# SpecFlow Environment Configuration

# Application Settings
ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# API Server
HOST=0.0.0.0
PORT=8000

# AI Provider (pydantic.ai)
# Supports: openai, anthropic, gemini
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# GEMINI_API_KEY=your-gemini-api-key-here

# Jira Integration
JIRA_CLIENT_ID=your-jira-oauth-client-id
JIRA_CLIENT_SECRET=your-jira-oauth-client-secret
JIRA_REDIRECT_URI=http://localhost:8000/api/integrations/jira/callback
JIRA_SCOPES=read:jira-work write:jira-work offline_access

# Linear Integration (Optional)
LINEAR_API_KEY=your-linear-api-key-here

# Asana Integration (Optional)
ASANA_CLIENT_ID=your-asana-client-id
ASANA_CLIENT_SECRET=your-asana-client-secret

# Notion Integration
NOTION_API_KEY=secret_your-notion-integration-token-here

# Google Docs Integration
GOOGLE_DOCS_CREDENTIALS_FILE=credentials.json
GOOGLE_DOCS_TOKEN_FILE=token.json

# Database (for storing parsed PRDs and drafts)
DATABASE_URL=sqlite:///./specflow.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/specflow

# Session & Security
SESSION_SECRET=your-session-secret-here
TOKEN_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Feature Flags
ENABLE_NOTION_PARSER=true
ENABLE_GDOCS_PARSER=true
ENABLE_LINEAR_INTEGRATION=false
ENABLE_ASANA_INTEGRATION=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
JIRA_API_RATE_LIMIT=100

# Monitoring (Optional)
SENTRY_DSN=
POSTHOG_API_KEY=
